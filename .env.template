# ==============================================================================
# MEETING AGENT - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ==============================================================================

# -----------------------------------------------------------------------------
# AI Model Configuration (DEFAULT: Google Gemini 2.5 Pro)
# -----------------------------------------------------------------------------
MODEL_PROVIDER=gemini  # Options: openai, gemini, anthropic

# Google Gemini Configuration (DEFAULT)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL_NAME=gemini-2.5-pro

# OpenAI Configuration (ALTERNATIVE)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-5
# OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration (ALTERNATIVE)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL_NAME=claude-sonnet-4-5

# Model Settings
TEMPERATURE=0.7
MAX_TOKENS=4000

# -----------------------------------------------------------------------------
# Tavily Web Search (for agenda context enrichment)
# -----------------------------------------------------------------------------
TAVILY_API_KEY=your-tavily-api-key-here

# -----------------------------------------------------------------------------
# LangGraph Agenda Planning
# -----------------------------------------------------------------------------
USE_LANGGRAPH_AGENDA=true               # Enable LangGraph-based planning
# LANGGRAPH_ORGS=                       # Comma-separated org IDs for whitelist (empty=all)

# -----------------------------------------------------------------------------
# Reasoning Configuration (for GPT-5)
# -----------------------------------------------------------------------------
# MEETING_AGENT_REASONING_EFFORT=medium  # Options: low, medium, high

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
SPINE_DB_PATH=/app/spine_dev.sqlite3    # Path to SQLite database
DEFAULT_ORG_ID=org_demo                 # Default organization ID

# -----------------------------------------------------------------------------
# Optional: Custom Port
# -----------------------------------------------------------------------------
# PORT=8000
